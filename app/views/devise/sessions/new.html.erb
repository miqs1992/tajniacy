<% content_for :head do %>
  <%= javascript_pack_tag 'devise', defer: true %>
  <%= stylesheet_pack_tag 'devise', media: 'all', defer: true %>
<% end %>

<div class="container text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-devise' }) do |f| %>
    <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>
    <%= f.label :email, class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email address', required: true %>
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'Password', required: true %>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        Remember me
      </label>
    </div>
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block'%>
  <% end %>
</div>
